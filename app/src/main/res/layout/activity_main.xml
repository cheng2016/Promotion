<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_content_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_120"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="@dimen/widget_size_72"
            android:layout_height="@dimen/widget_size_72"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:src="@mipmap/userportrait" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Monktang"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Super Store Company"
                android:textColor="@color/disable_color"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/job_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Job number:"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_10"
        android:paddingTop="@dimen/widget_size_20"
        android:background="@color/white">


        <GridView
            android:id="@+id/menu_grid_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/widget_size_8"
            android:horizontalSpacing="@dimen/widget_size_24"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/widget_size_30" />

    </FrameLayout>
</LinearLayout>
