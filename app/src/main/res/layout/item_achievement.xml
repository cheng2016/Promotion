<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_99">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_ranking"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/widget_size_8"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_24"
            android:text="No.1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/describe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_24"
        android:layout_alignParentRight="true"
        android:text="Signing store"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/widget_size_16"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18"
        android:textStyle="bold" />

        <View
            android:layout_width="@dimen/widget_size_240"
            android:layout_height="@dimen/widget_min_size_2"
            android:background="@color/splite_line"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</RelativeLayout>